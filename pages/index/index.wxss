/* pages/index/index.wxss */
page {
    background-color: #353540;
}
.container {
    width: 100%;
    height: 100%;
}

.header{
    width: 100%;
    height: 84vh;
}

.header_container {
    width: 100%;
    padding: 32rpx;
}

.box {
    max-width: 80%;
    min-height: 32rpx;
    line-height: 50rpx;
    margin-top: 50rpx;
    padding: 30rpx;
    word-wrap: break-word;
}

.box_left {
    color: #fff;
    background-color: #444654;
    border-radius: 0 30rpx 30rpx;
}

.box_right {
    margin-left: 20%;
    color: #fff;
    background-color: #86A8FC;
    border-radius: 30rpx 0 30rpx 30rpx;
}

.control {
    justify-content: flex-start;
}

.button {
    width: initial;
    margin: 0;
    padding: 0;
    align-items: center;
    font-size: 32rpx;
    color: #838383;
    border: none;
    background-color: transparent;
}

.button::after {
    border: none;
}

.button:first-child {
    margin-right: 30rpx;
}

.icon_copy,.icon_share {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.footer {
    width: 100%;
    height: 16vh;
    padding: 32rpx;
    background-color: #353540;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
}


.footer_occupy{
    width: 100%;
    height: 200rpx;
}

.footer_box {
    width: 100%;
    height: 120rpx;
    padding: 20rpx 20rpx 20rpx 40rpx;
    align-items: center;
    background-color: #F2F2F2;
    border-radius: 100rpx;
}

.footer_left {
    flex: 1;
    height: 80rpx;
}

input {
    height: 100%;
}

.contact {
    width: 100rpx;
    height: 60rpx;
    margin: 0;
    padding: 0;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    position: fixed;
    top: 100rpx;
    right: 0;
    z-index: 10;
    border-radius: 200rpx 0 0 200rpx;
}

.contact_img {
    width: 45rpx;
    height: 45rpx;
}

.footer_right {
    width: 80rpx;
    height: 80rpx;
    align-items: center;
    justify-content: center;
    border-radius: 80rpx;
    background-color: #86A8FF;
}

.icon_send {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
}


.loader_container {
    width: 80rpx;
}

.loader {  
    width: 20rpx; 
    height: 40rpx;
}

.four {
    width: 10rpx;
    height: 10rpx;
    background-color: #fff;
    border-radius: 50%;
    animation: loader4Animation 1s linear infinite;
}

@keyframes loader4Animation {
    0% {
        background-color: rgba(255, 255, 255, 1);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0.67), 30px 0px 0px 0px rgba(255, 255, 255, 0.33);
    }
    17% {
        background-color: rgba(255, 255, 255, 0.67);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 1), 30px 0px 0px 0px rgba(255, 255, 255, 0.67);
    }
    33% {
        background-color: rgba(255, 255, 255, 0.33);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0.67), 30px 0px 0px 0px rgba(255, 255, 255, 1);
    }
    50% {
        background-color: rgba(255, 255, 255, 0);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0.33), 30px 0px 0px 0px rgba(255, 255, 255, 0.67);  
    }
    67% {
        background-color: rgba(255, 255, 255, 0.33);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0), 30px 0px 0px 0px rgba(255, 255, 255, 0.33);
    }
    83% {
        background-color: rgba(255, 255, 255, 0.67);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0.33), 30px 0px 0px 0px rgba(255, 255, 255, 0);  }
    100% {
        background-color: rgba(255, 255, 255, 1);
        box-shadow: 15px 0px 0px 0px rgba(255, 255, 255, 0.67), 30px 0px 0px 0px rgba(255, 255, 255, 0.33);
    }
}